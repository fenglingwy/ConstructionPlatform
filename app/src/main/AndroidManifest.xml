<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.powtronic.constructionplatform">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.RegisterActivity"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".activity.ProductListActivity" />
        <activity android:name=".activity.ModuleDisplayActivity" />
        <activity android:name=".activity.ContentActivity" />
        <activity android:name=".activity.ProductDetailsActivity" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.ResetPswActivity" />
        <activity
            android:name=".activity.SearchActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activity.SearchDisplayActivity" />
        <activity
            android:name=".activity.AddProductActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.URLSetting"></activity>
    </application>

</manifest>